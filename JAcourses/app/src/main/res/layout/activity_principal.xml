<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Bienvenido(a):" />

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textSize="19dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            app:srcCompat="@drawable/logoslogan" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola!..."
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#1D3BE3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le damos la cordial bienvenida a JACourses, es un placer para nosotros que usted nos haya elegido.\n\nEncontrará una variedad de cursos de programación que le serán de mucha utilidad como capacitación y/o\nadquisición de conocimientos.\n"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperamos que nos tome como su única aplicación de aprendizaje!"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imgBtnInicio"
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_home_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:tooltipText="Inicio"/>
            <ImageButton
                android:id="@+id/imgBtnCursos"
                android:layout_width="135dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/ic_book_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:tooltipText="Cursos"/>

            <ImageButton
                android:id="@+id/imgBtnPerfil"
                android:layout_width="135dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/ic_grade_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:tooltipText="Perfil"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>